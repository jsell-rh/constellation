{
  "name": "constellation",
  "version": "0.1.0",
  "description": "Constellation - Distributed AI knowledge orchestration framework",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'tests/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist coverage",
    "benchmark": "tsx scripts/benchmark.ts",
    "docker:build": "docker build -t constellation .",
    "docker:run": "docker run -p 3000:3000 constellation",
    "pretest": "npm run lint && npm run typecheck",
    "prepare": "npm run build"
  },
  "keywords": [
    "ai",
    "knowledge-management",
    "orchestration",
    "distributed-systems",
    "litellm",
    "constellation"
  ],
  "author": "Red Hat",
  "license": "Apache-2.0",
  "dependencies": {
    "@langchain/community": "^0.2.0",
    "@langchain/core": "^0.2.0",
    "@langchain/openai": "^0.1.0",
    "@langchain/anthropic": "^0.1.0",
    "@langchain/google-vertexai": "^0.0.12",
    "convict": "^6.2.4",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "valkey": "^1.0.0",
    "js-yaml": "^4.1.0",
    "pino": "^8.17.2",
    "prom-client": "^15.1.0",
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/sdk-node": "^0.46.0",
    "@opentelemetry/auto-instrumentations-node": "^0.40.0",
    "keycloak-connect": "^24.0.0",
    "jsonwebtoken": "^9.0.2",
    "ajv": "^8.12.0",
    "uuid": "^9.0.1",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.6",
    "@types/convict": "^6.1.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "autocannon": "^7.14.0",
    "supertest": "^6.3.3",
    "@types/supertest": "^6.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/*.test.ts",
      "**/*.spec.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "moduleNameMapper": {
      "^@interfaces/(.*)$": "<rootDir>/interfaces/$1",
      "^@core/(.*)$": "<rootDir>/src/core/$1",
      "^@librarians/(.*)$": "<rootDir>/src/librarians/$1",
      "^@ai/(.*)$": "<rootDir>/src/ai/$1",
      "^@observability/(.*)$": "<rootDir>/src/observability/$1"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.test.json"
      }
    },
    "setupFiles": [
      "dotenv/config"
    ]
  }
}